model Property {
  id String @id @default(cuid())

  name           String
  city           String
  state          State
  totalArea      Float
  arableArea     Float
  vegetationArea Float

  producerId String
  producer   Producer  @relation(fields: [producerId], references: [id])

  plantings   Planting[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("properties")
}
